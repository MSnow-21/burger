<h1>Eat-Da-Burger</h1>

<ul>
    {{#each burger}}
    {{#unless devoured}}
    {{> burger/burger-block devoured=true}}
    {{/unless}}
    {{/each}}
</ul>

<ul>
    {{#each burger}}
    {{#if devoured}}
    {{>burger/burger-block devoured=false}}
    {{/if}}
    {{/each}}
</ul>

<form id="burger-form">
    <div class="form-group">
        <input type="text" id="bur" name="name">
    </div>
    <button type="Submit">Add Burger</button>
    <h2>Enter a burger you want to eat and click the Submit button!</h2>
</form>