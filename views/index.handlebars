<h1>Eat-Da-Burger</h1>

<div class="container burgerimage">

    <img src="/assets/img/burgerphoto.png" alt="burgerphoto" width="200" height="200"> 


</div>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block burger=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-md-6">
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block burger=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>

